<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RxDialogTheme" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@drawable/panel_white</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ToolbarShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/shape_material_shadow_down</item>
    </style>

    <style name="DrawerShadow">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_material_shadow_right</item>
    </style>

    <style name="MainDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/main_color</item>
    </style>

    <style name="IndeterminateProgress">
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/anim_indeterminate_progress</item>
        <item name="android:indeterminateDuration">2000</item>
    </style>

</resources>
