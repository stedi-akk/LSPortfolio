<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarActivityTheme" parent="AppTheme" />

    <style name="AppCompatDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MaterialProgress" parent="Material.Drawable.CircularProgress">
        <item name="cpd_padding">4dp</item>
        <item name="cpd_strokeColor">@color/colorAccent</item>
        <item name="cpd_rotateDuration">1750</item>
    </style>

    <style name="ToolbarShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/shape_material_shadow_down</item>
    </style>

    <style name="DrawerShadow">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_material_shadow_right</item>
    </style>

    <style name="GreyDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_dark</item>
    </style>

    <style name="CollapsingLayoutTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">26sp</item>
    </style>

</resources>
