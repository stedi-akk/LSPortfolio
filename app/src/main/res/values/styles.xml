<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/palette_primary</item>
        <item name="colorPrimaryDark">@color/palette_primary_dark</item>
        <item name="colorAccent">@color/palette_accent</item>
        <item name="android:windowBackground">@color/palette_window_background</item>
    </style>

    <style name="AppTheme.Toolbar" />

    <style name="AppCompatDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/palette_primary</item>
        <item name="colorAccent">@color/palette_accent</item>
    </style>

    <style name="NavigationViewTheme">
        <item name="android:textSize">@dimen/navigation_view_text_size</item>
    </style>

    <style name="MaterialProgress" parent="Material.Drawable.CircularProgress">
        <item name="cpd_padding">4dp</item>
        <item name="cpd_strokeColor">@color/palette_accent</item>
        <item name="cpd_rotateDuration">1750</item>
    </style>

    <style name="ToolbarShadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/shape_material_shadow_down</item>
    </style>

    <style name="DrawerShadow">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/shape_material_shadow_right</item>
    </style>

    <style name="GreyDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_light</item>
    </style>

    <style name="CollapsingLayoutTextAppearance" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">26sp</item>
    </style>

</resources>
