<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/ls_app_activity_icon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginRight="24dp" />

                <TextView
                    android:id="@+id/ls_app_activity_name"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_toRightOf="@+id/ls_app_activity_icon"
                    android:ellipsize="end"
                    android:gravity="bottom"
                    android:maxLines="3"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_large" />

                <View
                    android:id="@+id/ls_app_activity_first_divider"
                    style="@style/MainDivider"
                    android:layout_below="@+id/ls_app_activity_icon"
                    android:layout_marginBottom="24dp"
                    android:layout_marginTop="24dp" />

                <TextView
                    android:id="@+id/ls_app_activity_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ls_app_activity_first_divider" />

            </RelativeLayout>

            <com.stedi.lsportfolio.ui.other.BlockingViewPager
                android:id="@+id/ls_app_activity_pager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/ls_app_screen_height"
                android:layout_marginBottom="24dp"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/ls_app_activity_bottom_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="24dp"
                android:paddingRight="24dp"
                android:visibility="gone">

                <View
                    style="@style/MainDivider"
                    android:layout_marginBottom="24dp" />

                <LinearLayout
                    android:id="@+id/ls_app_activity_stores_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:gravity="center"
                    android:orientation="vertical" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
