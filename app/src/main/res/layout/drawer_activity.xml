<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout android:id="@+id/drawer_activity_drawer_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/drawer_activity_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"/>

        <View
            style="@style/ToolbarShadow"
            android:layout_below="@+id/toolbar"/>

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <android.support.design.widget.NavigationView
            android:id="@+id/drawer_activity_navigation_view"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:elevation="0dp"
            app:headerLayout="@layout/navigation_header"
            app:itemBackground="@android:color/transparent"
            app:menu="@menu/navigation_view"/>

        <View style="@style/DrawerShadow"/>

    </LinearLayout>

</android.support.v4.widget.DrawerLayout>